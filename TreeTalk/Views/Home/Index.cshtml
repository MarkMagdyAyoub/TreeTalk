@model PostFeedViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "../Shared/_Layout.cshtml";
}
@section Links {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

	<script src="~/jquery/jquery.min.js"></script>

    <link href="~/css/Home.css" rel="stylesheet" />
    <link href="~/css/imagestyle.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}
<nav class="navbar navbar-expand-lg shadow-sm px-4 py-2" style="background-color: var(--navbar-bg); color: var(--navbar-text);">
    <a class="navbar-brand d-flex align-items-center text-white" href="#">
        <img src="~/images/treetalk3.png" alt="TreeTalk Logo" style="height: 45px;" class="me-2" />
        <span class="fw-bold">TreeTalk</span>
    </a>

    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav me-auto mt-2 mt-lg-0">
            <a class="nav-link active text-white d-flex align-items-center" asp-controller="Home" asp-action="Index" asp-route-page="1" asp-route-pageSize="20">
                <i class="bi bi-house-door me-1"></i> Home
            </a>
            <a class="nav-link text-white d-flex align-items-center" asp-controller="User" asp-action="UserProfile">
                <i class="bi bi-gear me-1"></i> Settings
            </a>
            <a class="nav-link text-white d-flex align-items-center" href="#">
                <i class="bi bi-bell me-1"></i> Notifications
            </a>
        </div>

        <form class="d-flex mx-lg-auto my-2 my-lg-0 w-100 w-lg-50" role="search">
            <input class="form-control me-2 modern-input" type="search" placeholder="Search..." aria-label="Search">
            <button class="btn search-btn" type="submit"><i class="bi bi-search"></i></button>
        </form>

        <!-- User & controls section - aligned horizontally -->
        <div class="d-flex align-items-center gap-3 ms-lg-3 mt-3 mt-lg-0 flex-nowrap text-white">

            <!-- Welcome username -->
            <span class="navbar-text small text-nowrap">
                Welcome, <strong>@ViewData["Username"]</strong>
            </span>

            <!-- Logout button -->
            <form method="post" asp-controller="Auth" asp-action="Logout" class="mb-0 d-flex align-items-center">
                <button type="submit" class="btn btn-outline-light btn-sm d-flex align-items-center gap-1">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>

            <!-- Theme toggle button -->
            <button class="btn btn-sm btn-outline-light d-flex align-items-center gap-1" id="themeToggle" title="Toggle theme">
                <i class="bi bi-sun-fill" id="lightIcon"></i>
                <i class="bi bi-moon-fill d-none" id="darkIcon"></i>
                <span class="visually-hidden">Toggle theme</span>
            </button>
        </div>
    </div>
</nav>

<div>
    @await Html.PartialAsync("_Feed", Model)
</div>

