@model TreeTalk.Model.ViewModels.LoginViewModel
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

@section Links{
    <link href="~/css/Login.css" rel="stylesheet" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header text-center mb-4">
            <div class="d-flex align-items-center justify-content-center gap-3 mb-2">
                <img src="~/images/treetalk3.png" alt="TreeTalk Logo" style="max-height: 40px;" />
                <h1 class="login-title mb-0">Welcome Back</h1>
            </div>
            <p class="login-subtitle mb-0">Sign in to continue to TreeTalk</p>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            @if (!string.IsNullOrEmpty(ViewData.ModelState.GetModelErrorMessages().FirstOrDefault()))
            {
                <div class="alert alert-danger p-2 text-center">
                    @ViewData.ModelState.GetModelErrorMessages().FirstOrDefault()
                </div>
            }
        </div>

        <form asp-action="Login" method="post" novalidate>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="your@email.com" autocomplete="email" />
                <span asp-validation-for="Email" class="validation-message text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" autocomplete="current-password" />
                <span asp-validation-for="Password" class="validation-message text-danger small"></span>
            </div>

            <div class="remember-flex d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="btn-primary w-100">Sign In</button>
        </form>

        <div class="divider text-center my-3">Or</div>

        <a asp-action="GoogleLogin" asp-controller="Auth" class="btn-google w-100 d-flex align-items-center justify-content-center gap-2">
            <span class="google-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20px" height="20px">
                    <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" />
                    <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                    <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" />
                    <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
                </svg>
            </span>
            Sign in with Google
        </a>

        <div class="register-link mt-3 text-center">
            Don't have an account? <a asp-action="Register">Create account</a>
        </div>
    </div>
</div>
